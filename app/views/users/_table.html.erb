<table class="table table-striped table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col-9">Title</th>
      <th scope="col-1">votes number</th>
      <th scope="col-1">edit</th>
      <th scope="col-1">delete</th>
    </tr>
  </thead>
  <tbody>
    <% articles.each_with_index do | article , index | %>
      <tr>
        <th scope="row"><%= article.title %></th>
        <td><%= article.votes_count%></td>
        <td><%= link_to  "edit", edit_article_path(article), id: "edit-#{index}" %></td>
        <td><%= link_to  "delete", article_path(id: article.id), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>