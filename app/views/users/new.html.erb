<%= render 'shared/errors', obj: @user %>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="form-group">
    <label for="name"><%= f.label :name %></label>
    <%= f.text_field :name, class: "form-control shadow rounded", id: "name", placeholder: "Enter your name" %>
  </div>
  <div class="my-3">
    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary") %>
  </div>
<% end %>