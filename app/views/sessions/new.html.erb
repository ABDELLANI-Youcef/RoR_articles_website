<h1 class="text-center mt-5 mb-4">Login to our site</h1>
    
<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  <div class="form-group">
    <label for="name"><%= f.label :name %></label>
    <%= f.text_field :name, class: "form-control shadow rounded", id: "name", placeholder: "Enter your name" %>
  </div>

  <div class="my-3">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>