<%= form_with(model: @article, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control input-group-text" %>
  </div>
  <div class="form-group">
    <%= f.label :text, "Content" %>
    <%= f.text_area :text, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit(class: "btn btn-primary")  %>
  </div>
<% end %>